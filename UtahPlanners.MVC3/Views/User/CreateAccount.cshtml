@model UtahPlanners.MVC3.Models.User.CreateAccount
@{
    Layout = "~/Views/Shared/_LayoutLeftNav.cshtml";
}

@using (Html.BeginForm("CreateAccount", "User", FormMethod.Post))
{
<table cellspacing="0" 
    cellpadding="0" 
    border="0" 
    style="background-color:#F7F7DE;
        border-color:#CCCC99;
        border-width:1px;
        border-style:Solid;
        font-family:Verdana;
        font-size:10pt;
        border-collapse:collapse;">
	<tbody>
        <tr style="height:100%;">
		    <td style="border-width:0px;">
                <table cellspacing="0" cellpadding="0" border="0" style="height:100%;width:100%;border-collapse:collapse;">
			        <tbody>
                        <tr>
				            <td style="height:100%;width:100%;">
                                <table border="0" style="height:100%;width:100%;">
					                <tbody>
                                        <tr>
						                    <td align="center" colspan="2" style="color:White;background-color:#6B696B;font-weight:bold;">Sign Up for Your New Account</td>
					                    </tr>
                                        <tr>
						                    <td align="right">@Html.LabelFor(m => m.Username):</td>
                                            <td>
                                                @Html.TextBoxFor(m => m.Username)
                                                <span title="User Name is required." style="color:Red;visibility:hidden;">*</span>
                                            </td>
					                    </tr>
                                        <tr>
						                    <td align="right">@Html.LabelFor(m => m.Password):</td>
                                            <td>
                                                @Html.PasswordFor(m => m.Password)
                                                <span title="Password is required." style="color:Red;visibility:hidden;">*</span>
                                            </td>
					                    </tr>
                                        <tr>
						                    <td align="right">@Html.LabelFor(m => m.ConfirmPassword):</td>
                                            <td>
                                                @Html.PasswordFor(m => m.ConfirmPassword)
                                                <span title="Confirm Password is required." style="color:Red;visibility:hidden;">*</span>
                                            </td>
					                    </tr>
                                        <tr>
						                    <td align="right">@Html.LabelFor(m => m.Email):</td>
                                            <td>
                                                @Html.TextBoxFor(m => m.Email)
                                                <span title="E-mail is required." style="color:Red;visibility:hidden;">*</span>
                                            </td>
					                    </tr>
                                        <tr>
						                    <td align="right">@Html.LabelFor(m => m.SecurityQuestion):</td>
                                            <td>
                                                @Html.TextBoxFor(m => m.SecurityQuestion)
                                                <span title="Security question is required." style="color:Red;visibility:hidden;">*</span>
                                            </td>
					                    </tr>
                                        <tr>
						                    <td align="right">@Html.LabelFor(m => m.SecurityAnswer):</td>
                                            <td>
                                                @Html.TextBoxFor(m => m.SecurityAnswer)
                                                <span title="Security answer is required." style="color:Red;visibility:hidden;">*</span>
                                            </td>
					                    </tr>
                                        <tr>
						                    <td align="center" colspan="2"><span style="color:Red;display:none;">The Password and Confirmation Password must match.</span></td>
					                    </tr>
				                    </tbody>
                                </table>
                            </td>
			            </tr>
		            </tbody>
                </table>
            </td>
	    </tr>
        <tr>
		    <td align="right">
                <table cellspacing="5" cellpadding="5" border="0" style="height:100%;width:100%;">
			        <tbody>
                        <tr align="right">
				            <td align="right"><input type="submit" value="Create User" style="color:#284775;background-color:#FFFBFF;border-color:#CCCCCC;border-width:1px;border-style:Solid;font-family:Verdana;" /></td>
			            </tr>
		            </tbody>
                </table>
            </td>
	    </tr>
    </tbody>
</table>
}